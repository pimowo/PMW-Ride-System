// ObsÅ‚uga modali
function setupModal() {
    const modal = document.getElementById('info-modal');
    const closeBtn = document.querySelector('.close-button');
    
    if (modal && closeBtn) {
        closeBtn.onclick = () => {
            modal.style.display = 'none';
        };

        window.onclick = (event) => {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        };
    }
}

function showModal(title, description) {
    const modal = document.getElementById('info-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalDescription = document.getElementById('modal-description');
    
    if (modal && modalTitle && modalDescription) {
        modalTitle.textContent = title;
        modalDescription.textContent = description;
        modal.style.display = 'block';
    }
}

// Funkcja pobierania aktualnego stanu
async function fetchCurrentState() {
    try {
        const response = await fetch('/api/status');
        const data = await checkAPIResponse(response, 'BÅ‚Ä…d pobierania stanu systemu');
        debug('Pobrano aktualny stan:', data);
        
        if (data.lights) {
            updateLightStatus(data.lights);
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas pobierania stanu:', error);
    }
}

// Funkcja pobierania wersji systemu
async function fetchSystemVersion() {
    try {
        const response = await fetch('/api/version');
        const data = await checkAPIResponse(response, 'BÅ‚Ä…d pobierania wersji systemu');
        
        const versionElement = document.getElementById('system-version');
        if (versionElement && data.version) {
            versionElement.textContent = data.version;
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas pobierania wersji systemu:', error);
    }
}

// GÅ‚Ã³wny kod inicjalizacyjny
let clockInterval = null;

document.addEventListener('DOMContentLoaded', async () => {
    debug('Rozpoczynam inicjalizacjÄ™...');
    try {
        // KrÃ³tkie opÃ³Åºnienie dla pewnoÅ›ci zaÅ‚adowania DOM
        await new Promise(resolve => setTimeout(resolve, CONFIG.DOM_INIT_DELAY));

        // Inicjalizacja zegara
        clockInterval = initializeClock();

        // Inicjalizacja pozostaÅ‚ych moduÅ‚Ã³w
        if (document.querySelector('.light-config')) {
            await loadLightConfig();
            initLightConfigListeners();
        }

        // RÃ³wnolegÅ‚e pobieranie konfiguracji
        await Promise.all([
            fetchDisplayConfig(),
            fetchControllerConfig(),
            fetchSystemVersion()
        ]);

        // Inicjalizacja WebSocket i UI
        setupWebSocket();
        setupModal();

        debug('Inicjalizacja zakoÅ„czona pomyÅ›lnie');
    } catch (error) {
        console.error('BÅ‚Ä…d podczas inicjalizacji:', error);
        if (clockInterval) clearInterval(clockInterval);
    }
});

// Eksport funkcji (jeÅ›li potrzebne w innych moduÅ‚ach)
window.showModal = showModal;
window.saveLightConfig = saveLightConfig;
window.saveDisplayConfig = saveDisplayConfig;
window.saveControllerConfig = saveControllerConfig;

