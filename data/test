// StaÅ‚e konfiguracyjne
const CONFIG = {
    DEBOUNCE_SAVE: 500,    // OpÃ³Åºnienie zapisu (ms)
    DEBOUNCE_LOAD: 250,    // OpÃ³Åºnienie odczytu (ms)
    AUTO_REFRESH: 5000,    // Automatyczne odÅ›wieÅ¼anie co 5s
    WEBSOCKET_RECONNECT: 5000, // Czas ponownego poÅ‚Ä…czenia WebSocket (ms)
    RTC_UPDATE: 1000,      // CzÄ™stotliwoÅ›Ä‡ aktualizacji zegara (ms)
    DOM_INIT_DELAY: 200    // OpÃ³Åºnienie inicjalizacji DOM (ms)
};

// Cache dla ostatnich wartoÅ›ci
let lastLightConfig = null;
let lastDisplayConfig = null;
let ws = null;

// Funkcje pomocnicze do porÃ³wnywania konfiguracji
function configEquals(a, b) {
    if (!a || !b) return false;
    return JSON.stringify(a) === JSON.stringify(b);
}

// Funkcja debugowania
function debug(...args) {
    if (typeof console !== 'undefined') {
        console.log('[DEBUG]', ...args);
    }
}

// Funkcja debounce do optymalizacji wywoÅ‚aÅ„
const debounce = (func, wait) => {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
};

// Funkcja sprawdzajÄ…ca odpowiedÅº API
function checkAPIResponse(response, errorMessage = 'BÅ‚Ä…d API') {
    if (!response.ok) {
        throw new Error(`${errorMessage}: ${response.status}`);
    }
    return response.json();
}

// Funkcja sprawdzajÄ…ca elementy DOM
function checkElements(...ids) {
    const missing = [];
    const elements = {};

    for (const id of ids) {
        const element = document.getElementById(id);
        if (!element) {
            missing.push(id);
        }
        elements[id] = element;
    }

    if (missing.length > 0) {
        throw new Error(`Brak elementÃ³w: ${missing.join(', ')}`);
    }

    return elements;
}

// Funkcje konwersji wartoÅ›ci formularza na wartoÅ›ci API
function getLightMode(value) {
    debug('Konwersja wartoÅ›ci formularza:', value);
    switch(value) {
        case 'front-day':
        case 'front-normal':
            return "FRONT";
        case 'rear':
            return "REAR";
        case 'front-day-rear':
        case 'front-normal-rear':
            return "BOTH";
        case 'off':
        default:
            return "NONE";
    }
}

// Funkcja konwersji wartoÅ›ci z API na wartoÅ›ci formularza
function getFormValue(serverValue, isNightMode = false) {
    debug('Konwersja wartoÅ›ci z serwera:', serverValue);
    switch(serverValue) {
        case 'FRONT':
            return isNightMode ? 'front-normal' : 'front-day';
        case 'REAR':
            return 'rear';
        case 'BOTH':
            return isNightMode ? 'front-normal-rear' : 'front-day-rear';
        case 'NONE':
        default:
            return 'off';
    }
}

// Funkcja zbierajÄ…ca dane z formularza Å›wiateÅ‚
function getLightConfigFromForm() {
    const elements = {
        dayLights: document.getElementById('day-lights'),
        nightLights: document.getElementById('night-lights'),
        dayBlink: document.getElementById('day-blink'),
        nightBlink: document.getElementById('night-blink'),
        blinkFrequency: document.getElementById('blink-frequency')
    };

    return {
        dayLights: getLightMode(elements.dayLights.value),
        nightLights: getLightMode(elements.nightLights.value),
        dayBlink: elements.dayBlink.checked,
        nightBlink: elements.nightBlink.checked,
        blinkFrequency: parseInt(elements.blinkFrequency.value)
    };
}

// Funkcja zapisywania konfiguracji Å›wiateÅ‚ z debounce
const saveLightConfig = debounce(async () => {
    debug('Rozpoczynam zapisywanie konfiguracji Å›wiateÅ‚');
    try {
        const lightConfig = getLightConfigFromForm();
        
        // SprawdÅº czy konfiguracja faktycznie siÄ™ zmieniÅ‚a
        if (configEquals(lightConfig, lastLightConfig)) {
            debug('Konfiguracja nie zmieniÅ‚a siÄ™, pomijam zapis');
            return;
        }

        debug('Przygotowane dane:', lightConfig);

        const formData = new URLSearchParams();
        formData.append('data', JSON.stringify(lightConfig));

        const response = await fetch('/api/lights/config', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: formData.toString()
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const result = await response.json();
        if (result.status !== 'ok') {
            throw new Error(result.message || 'Nieznany bÅ‚Ä…d');
        }

        lastLightConfig = lightConfig;
        
    } catch (error) {
        console.error('BÅ‚Ä…d podczas zapisywania:', error);
        alert('BÅ‚Ä…d podczas zapisywania ustawieÅ„: ' + error.message);
    }
}, CONFIG.DEBOUNCE_SAVE);

// Funkcja wczytywania konfiguracji Å›wiateÅ‚ z debounce
const loadLightConfig = debounce(async () => {
    debug('Rozpoczynam wczytywanie konfiguracji Å›wiateÅ‚...');
    try {
        const response = await fetch('/api/status');
        const data = await response.json();
        debug('Otrzymane dane:', data);

        if (data.lights) {
            // SprawdÅº czy konfiguracja faktycznie siÄ™ zmieniÅ‚a
            if (configEquals(data.lights, lastLightConfig)) {
                debug('Konfiguracja nie zmieniÅ‚a siÄ™, pomijam aktualizacjÄ™');
                return;
            }

            debug('Aktualizacja formularza, otrzymane dane:', data.lights);
            
            const elements = {
                dayLights: document.getElementById('day-lights'),
                nightLights: document.getElementById('night-lights'),
                dayBlink: document.getElementById('day-blink'),
                nightBlink: document.getElementById('night-blink'),
                blinkFrequency: document.getElementById('blink-frequency')
            };

            elements.dayLights.value = getFormValue(data.lights.dayLights, false);
            elements.nightLights.value = getFormValue(data.lights.nightLights, true);
            elements.dayBlink.checked = Boolean(data.lights.dayBlink);
            elements.nightBlink.checked = Boolean(data.lights.nightBlink);
            elements.blinkFrequency.value = data.lights.blinkFrequency || 500;

            lastLightConfig = data.lights;
            debug('Formularz zaktualizowany pomyÅ›lnie');
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas wczytywania konfiguracji Å›wiateÅ‚:', error);
    }
}, CONFIG.DEBOUNCE_LOAD);

// Funkcja inicjalizacji nasÅ‚uchiwania zmian w formularzu Å›wiateÅ‚
function initLightConfigListeners() {
    const elements = ['day-lights', 'night-lights', 'day-blink', 'night-blink', 'blink-frequency'];
    
    elements.forEach(id => {
        const element = document.getElementById(id);
        if (element) {
            element.addEventListener('change', () => {
                debug(`Zmieniono wartoÅ›Ä‡ ${id}: ${element.value}`);
                saveLightConfig();
            });
        }
    });

    // Automatyczne odÅ›wieÅ¼anie co 5 sekund
    setInterval(loadLightConfig, CONFIG.AUTO_REFRESH);
}

// Konfiguracja i obsÅ‚uga WebSocket
function setupWebSocket() {
    debug('Inicjalizacja WebSocket...');
    function connect() {
        ws = new WebSocket('ws://' + window.location.hostname + '/ws');
        
        ws.onopen = () => {
            debug('WebSocket poÅ‚Ä…czony');
            fetchCurrentState();
        };

        ws.onmessage = (event) => {
            try {
                const data = JSON.parse(event.data);
                debug('Otrzymano dane WebSocket:', data);
                if (data.lights) {
                    updateLightStatus(data.lights);
                    updateLightForm(data.lights);
                }
            } catch (error) {
                console.error('BÅ‚Ä…d podczas przetwarzania danych WebSocket:', error);
            }
        };

        ws.onclose = () => {
            debug('WebSocket rozÅ‚Ä…czony, prÃ³ba ponownego poÅ‚Ä…czenia za 5s');
            setTimeout(connect, CONFIG.WEBSOCKET_RECONNECT);
        };

        ws.onerror = (error) => {
            console.error('BÅ‚Ä…d WebSocket:', error);
        };
    }

    connect();
}

// Funkcje obsÅ‚ugi RTC (zegara)
async function fetchRTCTime() {
    try {
        const timeElement = document.getElementById('rtc-time');
        const dateElement = document.getElementById('rtc-date');

        if (!timeElement || !dateElement) {
            debug('Elementy czasu nie sÄ… gotowe');
            return;
        }

        const response = await fetch('/api/time');
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();
        if (data && data.time) {
            const { hours, minutes, seconds, year, month, day } = data.time;
            
            const timeStr = `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            const dateStr = `${String(day).padStart(2, '0')}/${String(month).padStart(2, '0')}/${year}`;
            
            timeElement.value = timeStr;
            dateElement.value = dateStr;
            
            debug('Zaktualizowano czas:', { time: timeStr, date: dateStr });
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas pobierania czasu RTC:', error);
    }
}

// Inicjalizacja zegara
function initializeClock() {
    debug('Inicjalizacja zegara');
    fetchRTCTime(); // Pierwsze pobranie
    return setInterval(fetchRTCTime, CONFIG.RTC_UPDATE);
}

// Funkcje konfiguracji wyÅ›wietlacza
async function fetchDisplayConfig() {
    try {
        debug('Pobieranie konfiguracji wyÅ›wietlacza...');
        const response = await fetch('/api/display/config');
        const data = await checkAPIResponse(response, 'BÅ‚Ä…d pobierania konfiguracji wyÅ›wietlacza');
        
        if (data && data.config) {
            updateDisplayForm(data.config);
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas pobierania konfiguracji wyÅ›wietlacza:', error);
    }
}

async function saveDisplayConfig(config) {
    try {
        debug('Zapisywanie konfiguracji wyÅ›wietlacza:', config);
        const formData = new URLSearchParams();
        formData.append('data', JSON.stringify(config));

        const response = await fetch('/api/display/config', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: formData.toString()
        });

        const result = await checkAPIResponse(response, 'BÅ‚Ä…d zapisywania konfiguracji wyÅ›wietlacza');
        if (result.status === 'ok') {
            debug('Konfiguracja wyÅ›wietlacza zapisana pomyÅ›lnie');
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas zapisywania konfiguracji wyÅ›wietlacza:', error);
        alert('BÅ‚Ä…d podczas zapisywania ustawieÅ„ wyÅ›wietlacza: ' + error.message);
    }
}

// Funkcje konfiguracji kontrolera
async function fetchControllerConfig() {
    try {
        debug('Pobieranie konfiguracji kontrolera...');
        const response = await fetch('/api/controller/config');
        const data = await checkAPIResponse(response, 'BÅ‚Ä…d pobierania konfiguracji kontrolera');
        
        if (data && data.config) {
            updateControllerForm(data.config);
        }
    } catch (error) {
        console.error('BÅ‚Ä…d podczas pobierania konfiguracji kontrolera:', error);
    }
}

async function saveControllerConfig(config) {
    try {
